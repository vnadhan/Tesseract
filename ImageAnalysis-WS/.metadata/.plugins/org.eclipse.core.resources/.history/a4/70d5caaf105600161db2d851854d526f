        if (api.Init(".", "ENG") != 0) {
            System.err.println("Could not initialize tesseract.");
            System.exit(1);
        }
        
        
        IplImage img = cvLoadImage("vishnu.png");
        System.out.println(img.width() + "- " + img.height());
        downScaleImage(img, 30);
        
     //   downScaleImage(srcImage, percent)

